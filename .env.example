# Copy this file to .env and fill in your actual values
# All values are required unless marked optional

# GitHub token for API access (REQUIRED)
GITHUB_TOKEN=your_github_token_here

# Azure deployment configuration (REQUIRED)
RESOURCE_GROUP=jedimaster-rg
FUNCTION_APP_NAME=JediMaster2

# Azure AI Foundry configuration (REQUIRED)
AZURE_AI_FOUNDRY_ENDPOINT=https://jedimaster-resource.cognitiveservices.azure.com/openai/deployments/model-router/chat/completions?api-version=2025-01-01-preview
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/YourProject

# Optional: AI resource details for deployment script
AI_RESOURCE_GROUP=rg-lucabol-4040
# AI_RESOURCE_NAME=my-ai-resource  # Auto-detected from endpoint if not provided

# Note: Authentication uses DefaultAzureCredential (managed identity)
# No API key needed when using managed authentication

# Azure Function configuration
SCHEDULE_CRON=0 */30 * * * *
AUTOMATION_REPOS=owner/repo1,owner/repo2

# Issue processing configuration
CREATE_ISSUES=0
CREATE_ISSUES_COUNT=5
SIMILARITY_THRESHOLD=0.85

# PR processing configuration
PROCESS_PRS=1
AUTO_MERGE=1
JUST_LABEL=1
USE_FILE_FILTER=0

# Maximum number of merge retry attempts before giving up (default: 5)
MERGE_MAX_RETRIES=5

# Maximum number of comments before marking PR as needing human review (default: 35)
MAX_COMMENTS=35

# Rate limiting controls to avoid GitHub API limits
BATCH_SIZE=5
# Delay in seconds between API-heavy operations to respect rate limits
RATE_LIMIT_DELAY=2.0

# Skip PR reviews and merge directly (1 to enable, 0 to disable)
SKIP_PR_REVIEWS=0

# Issue action mode: 'assign' to assign to Copilot, 'label' to only add labels
ISSUE_ACTION=assign